<?xml version="1.0" encoding="utf-8"?>
<!-- Layout of the Welcome screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.topquiz.controller.MainActivity"
    android:orientation="vertical" >

    <!-- Welcome text -->
    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="Bienvenue dans TopQuiz !\nQuel est votre prénom ?" />

    <!-- Placeholder where user can type a name -->
    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Veuillez saisir votre prénom..." />

    <!-- Launching game button -->
    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:layout_gravity="center_horizontal"
        android:text="C'est parti !"/>

</LinearLayout>
